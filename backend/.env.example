# Astra DB Configuration
# Add these environment variables to your .env file

# Astra DB Application Token (required)
# Get this from your Astra DB dashboard
ASTRA_DB_APPLICATION_TOKEN=your_astra_db_token_here

# Astra DB Database ID (required)
# Found in your Astra DB dashboard URL
ASTRA_DB_ID=your_database_id_here

# Astra DB Endpoint (optional - will be auto-constructed if not provided)
# Full API endpoint URL for your database
ASTRA_DB_ENDPOINT=https://your-database-id-region.apps.astra.datastax.com

# Astra DB Region (optional - defaults to us-east1)
ASTRA_DB_REGION=us-east1

# Google Gemini API Key (required for LLM)
GEMINI_API_KEY=your_gemini_api_key_here
GOOGLE_API_KEY=your_google_api_key_here